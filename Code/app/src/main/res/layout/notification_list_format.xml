<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_List_format"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_list_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="#11B88F"
        app:cardCornerRadius="15dp"
        app:contentPadding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_item_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <TextView
                android:id="@+id/TitleDisplay"
                android:layout_width="173dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:text="TextView"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/RecipientDisplay"
                android:layout_width="173dp"
                android:layout_height="23dp"

                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/UsernameDisplay"
                app:layout_constraintTop_toBottomOf="@+id/TitleDisplay" />

            <TextView
                android:id="@+id/UsernameDisplay"
                android:layout_width="173dp"
                android:layout_height="23dp"
                android:text="TextView"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TitleDisplay" />

            <TextView
                android:id="@+id/MessageDisplay"
                android:layout_width="345dp"
                android:layout_height="33dp"
                android:text="TextView"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/UsernameDisplay" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>