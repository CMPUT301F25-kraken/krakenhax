<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KrakenHax" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set the status bar color to match the nav bar -->
        <item name="android:statusBarColor">@color/eventCardBackgroundColor</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the background color of the splash screen -->
        <item name="windowSplashScreenBackground">@color/loginBackground</item>

        <!-- Set the icon to be displayed on the splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- (Optional) Set the theme to transition to after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.KrakenHax</item>
    </style>

    <style name="Theme.KrakenHax" parent="Base.Theme.KrakenHax" />
</resources>